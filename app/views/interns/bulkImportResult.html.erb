<div class=container>
  <div class="heading">
    <h2 class="text-center">Bulk Import Results</h2>
  </div>
  <% if @interns[:invalid_attribute].empty? %>
    <% if @interns[:failed_rows] <1 %>
      <h2>Import on <%= @date%>: <span class="success-status"> <%= "Successfully Imported" %></span></h2>
    <% else %>
      <h2>Import on <%= @date%>: <span class="failed-status"> <%= "Failed" %></span></h2>
      <div class=summary>
        <h1>Summary</h1>
        <div class="name">File Name:  <span class="file-name"><%= @file_name%></span></div>
        <div class="total-rows">Total No. of rows: <span class="total-rows-count"><%= @interns[:total_rows]%></span></div>
        <div class="success">No. of rows success:  <span class="success-count"><%= @interns[:success_rows]%></span></div>
        <div class="failed">No. of rows failed: <span class="failed-count"><%= @interns[:failed_rows]%></span></div>
      </div>
    <% end%>
    <% if @interns[:invalid_attribute].empty? && @interns[:failed_rows] > 0 %>
      <div class=details-errors>
        <h1>Error Details</h1>
        <% @interns[:interns_records].each do |intern|  %>
          <table class="table table-bordered">
          <div><%= "Row no:  #{intern[:row_number]}" %></div>
            <thead class="thead-light">
              <tr>
                <th>Emp Id</th>
                <th>Display Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Batch</th>
                <th>Dob</th>
                <th>Gender</th>
              </tr>
            </thead>
            <tr>
                <td><%= intern[:intern_details][0] %></td>
                <td><%= intern[:intern_details][1] %></td>
                <td><%= intern[:intern_details][2] %></td>
                <td><%= intern[:intern_details][3] %></td>
                <td><%= intern[:intern_details][4] %></td>
                <td><%= intern[:intern_details][5] %></td>
                <td><%= intern[:intern_details][6] %></td>
            </tr>
          </table>
            <div>
              <h2>
                <%= pluralize(intern[:errors].count, "error") %>
              </h2>
            </div>
            <ul>
              <% intern[:errors].each do |msg| %>
               <li><%= msg %></li>
              <% end %>
            </ul>
        <% end %>
      </div>
    <% end %>
  <% else%>
    <div class="invalid-csv-file">
      <h2> Invalid CSV File!! Please pass valid CSV file or follow the Instractions </h2>
    </div>
  <% end %>
</div>
