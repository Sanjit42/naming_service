<div class="col-md-2">
  <%= form_tag '/login' do  %>
    <div class="form-group">
      <%= label_tag :email%>
      <%= text_field_tag :email, nil, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= label_tag :password%>
      <%= password_field_tag :password, nil, class:'form-control'%>
    </div>
    <%= submit_tag 'Log in', class: 'btn-success' %>
  <% end %>
</div>

